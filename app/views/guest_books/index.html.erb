<p id="notice"><%= notice %></p>

<h1>Guest Books</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guest_books.each do |guest_book| %>
      <tr>
        <td><%= guest_book.user_id %></td>
        <td><%= guest_book.title %></td>
        <td><%= guest_book.message %></td>
        <td><%= link_to 'Show', guest_book %></td>
        <td><%= link_to 'Edit', edit_guest_book_path(guest_book) %></td>
        <td><%= link_to 'Destroy', guest_book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

